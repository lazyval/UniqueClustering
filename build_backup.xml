<?xml version ="1.0"?>
<project default="build" name="UniqueClustering" basedir=".">
	<description>A simple Java project that would detect non-unique entities in yandex.auto<description>
	
	<property name="src.dir" location="${basedir}/src"/>

    <!--Those properties would be used to create database file -->
    <property name="sql.driver" value="com.mysql.jdbc.Driver"/>
    <property name="sql.url" value="jdbc:mysql://127.0.0.1"/>
    <property name="sql.user" value="johny"/>
    <property name="sql.pass" value="johny"/>


	<!-- Assembling of application -->
	<target name="build" depends="clean">
		<mkdir dir="${basedir.classes}/"/>

		<javac srcdir="${src.dir}/"
			destdir="${basedir.classes}"
			debug="false"
			deprication="true"
			optimize="true" >
			<classpath refid="libs.dir">
		</javac>

	</target>

  <target name="createTables">
    <sql driver="${sql.driver}" url="${sql.url}" userid="${sql.user}"
                                    password="${sql.pass}" >
      <transaction src="client.sql"/>
      <transaction src="project.sql"/>
    </sql>
  </target>

</project>
